<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    <group
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:translateX="16.2"
        android:translateY="16.2">

        <group
            android:translateX="2"
            android:translateY="2">
            <!-- Upper swoosh (eyelid) -->
            <path
                android:pathData="M25,50 C40,25 70,25 85,50"
                android:strokeWidth="6"
                android:strokeLineCap="round">
                <aapt:attr name="android:strokeColor">
                    <gradient
                        android:endX="85"
                        android:endY="50"
                        android:startX="25"
                        android:startY="50"
                        android:type="linear">
                        <item
                            android:color="#4FC3F7"
                            android:offset="0.0" />
                        <item
                            android:color="#2196F3"
                            android:offset="1.0" />
                    </gradient>
                </aapt:attr>
            </path>

            <!-- Lower swoosh (eyelid) extending into a path -->
            <path
                android:pathData="M20,58 C35,83 65,83 80,58 L95, 45"
                android:strokeWidth="6"
                android:strokeLineCap="round">
                <aapt:attr name="android:strokeColor">
                    <gradient
                        android:endX="95"
                        android:endY="45"
                        android:startX="20"
                        android:startY="58"
                        android:type="linear">
                        <item
                            android:color="#80DEEA"
                            android:offset="0.0" />
                        <item
                            android:color="#2196F3"
                            android:offset="1.0" />
                    </gradient>
                </aapt:attr>
            </path>

            <!-- Central glow -->
            <path android:pathData="M54,54m-8,0a8,8 0,1 1,16 0a8,8 0,1 1,-16 0">
                <aapt:attr name="android:fillColor">
                    <gradient
                        android:centerX="54"
                        android:centerY="54"
                        android:gradientRadius="8"
                        android:type="radial">
                        <item
                            android:color="#FFFFFF"
                            android:offset="0.0" />
                        <item
                            android:color="#80DEEA"
                            android:offset="0.5" />
                        <item
                            android:color="#0080DEEA"
                            android:offset="1.0" />
                    </gradient>
                </aapt:attr>
            </path>
        </group>
    </group>
</vector>

